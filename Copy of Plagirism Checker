print(f\"Similarity score: {similarity:.2f}\")\n","    else:\n","        print(\"No plagiarism detected.\")\n","        print(f\"Similarity score: {similarity:.2f}\")\n","document1 = \"Python is a popular programming language.\"\n","document2 = \"Python is widely used for web development and data science.\"\n","\n","check_plagiarism(document1, document2)\n"]},{"cell_type":"code","source":[],"metadata":{"id":"DzXF2tbvYKsh"},"execution_count":null,"outputs":[]},{"cell_type":"code","source":[],"metadata":{"id":"ibE4Nyq3WxnJ"},"execution_count":null,"outputs":[]}]}